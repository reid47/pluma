{
  "name": "pluma-vscode",
  "displayName": "Pluma",
  "version": "1.0.0",
  "description": "Pluma language support for VS Code",
  "author": "Reid Mitchell",
  "publisher": "reid47",
  "categories": ["Languages", "Language Packs"],
  "license": "MIT",
  "scripts": {
    "copy-local":
      "cp -r . %USERPROFILE%/.vscode/extensions/reid47.vscode-pluma-0.0.0"
  },
  "main": "src/extension.js",
  "engines": {
    "vscode": "^1.18.0"
  },
  "activationEvents": ["onLanguage:pluma"],
  "contributes": {
    "languages": [
      {
        "id": "pluma",
        "extensions": [".plum"],
        "aliases": ["Pluma"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pluma",
        "scopeName": "source.pluma",
        "path": "./syntaxes/pluma.tmLanguage.json"
      }
    ]
  }
}
