{
  "$schema":
    "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "pluma",
  "scopeName": "source.pluma",
  "patterns": [
    {
      "match": "#.*",
      "name": "comment.line.number-sign.pluma"
    },
    {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.pluma"
    },
    {
      "match": "\\b([0-9]+\\.?[0-9]*)\\b",
      "name": "constant.numeric.pluma"
    },
    {
      "match": "\\b(let|in|if|then|else)\\s+",
      "name": "keyword.control.pluma"
    },
    {
      "match": "\\b(module|export|import|from|type|alias|interop)\\s+",
      "name": "keyword.other.pluma"
    },
    {
      "match": "=>",
      "name": "keyword.operator.double-arrow.pluma"
    },
    {
      "match": "->",
      "name": "keyword.operator.arrow.pluma"
    },
    {
      "match": "\\|>",
      "name": "keyword.operator.pipe.pluma"
    },
    {
      "match": "[=,:\\|\\.\\(\\)\\[\\]\\{\\}]",
      "name": "keyword.operator.pluma"
    }
  ]
}
